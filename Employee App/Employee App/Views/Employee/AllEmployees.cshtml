@model List<EmployeeLib.DataClasses.Employee>

@{
    var options = new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "content1"
    };
}

<div>
    <h3 class="text-secondary" style="text-align:center">List of Employees</h3>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Employee Name</th>
            <th>Address</th>
            <th>Salary</th>
            <th>Department ID</th>
            <th>Options</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmpId</td>
                <td>@item.EmpName</td>
                <td>@item.Address</td>
                <td>@item.Salary</td>
                <td>@item.DeptId</td>
                <td>
                    @Ajax.ActionLink("Edit", "Update", new { id = item.EmpId }, options, new { @class = "btn btn-success" })
                @Ajax.ActionLink("Delete", "Del", new { id = item.EmpId }, options, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
    </table>
</div>