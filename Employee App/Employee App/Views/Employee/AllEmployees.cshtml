@model List<EmployeeLib.DataClasses.Employee>

@{
    var options = new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "content1"
    };
}

<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Employee Name</th>
            <th>Address</th>
            <th>Salary</th>
            <th>Department ID</th>
            <th>Options</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmpId</td>
                <td>@item.EmpName</td>
                <td>@item.Address</td>
                <td>@item.Salary</td>
                <td>@item.DeptId</td>
                <td>@Ajax.ActionLink("Edit", "Update", null, options, new { @class = "btn btn-warning" })</td>
            </tr>
        }
    </table>
</div>